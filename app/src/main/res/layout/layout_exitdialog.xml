<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x_16"
            android:layout_marginLeft="@dimen/x_60"
            android:layout_marginRight="@dimen/x_60"
            android:layout_marginTop="@dimen/x_16"
            android:text="确定退出吗?"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_1"
            android:layout_marginLeft="@dimen/x_16"
            android:layout_marginRight="@dimen/x_16"
            android:background="@color/grey_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_exitagree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="确定"/>

            <View
                android:layout_width="@dimen/x_1"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/x_5"
                android:layout_marginTop="@dimen/x_5"
                android:background="@color/grey_line"/>

            <Button
                android:id="@+id/btn_exitcancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/cancel"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>