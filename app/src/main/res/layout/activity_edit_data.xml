<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.yeying.aimi.mode.person.EditDataActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/black"/>

    <include
        layout="@layout/appbar_layout"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_nickname"
            android:maxLength="12"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:textColor="@color/white"
            android:padding="@dimen/x_16"
            android:background="@color/set_item"
            android:layout_width="0dp"
            android:textSize="@dimen/sp_15"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/imgbtn_cancle"
            android:padding="@dimen/x_16"
            android:layout_gravity="center_vertical"
            android:background="@color/set_item"
            android:src="@drawable/cancle_little"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:textSize="@dimen/sp_15"
            android:padding="@dimen/x_10"
            android:gravity="top"
            android:maxLength="30"
            android:id="@+id/ed_dis"
            android:hint="请输入签名"
            android:textColorHint="@color/grey"
            android:maxLines="5"
            android:minLines="5"
            android:textCursorDrawable="@null"
            android:textColor="@color/white"
            android:background="@color/set_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_nums"
            android:layout_margin="@dimen/x_16"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/ed_dis"
            android:textColor="@color/white"
            android:text="30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>
