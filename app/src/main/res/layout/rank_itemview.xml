<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:id="@+id/rank_it_parent"
                android:background="#000"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/x_25"
                android:paddingRight="@dimen/x_25"
                android:paddingTop="@dimen/x_5"
                android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rank_it_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:layout_gravity="center_vertical"/>

        <com.yeying.aimi.views.RoundImageView
            android:id="@+id/rank_it_head"
            android:layout_marginLeft="15dp"
            android:layout_width="@dimen/x_40"
            android:layout_height="@dimen/x_40"
            android:layout_gravity="center_vertical"
            android:src="@drawable/default_icon"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank_it_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/gender_man"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_18"
                android:text="姓名"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/x_23"
                />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/rank_it_money"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/money_icon"
                android:drawablePadding="5dp"
                android:layout_gravity="center_vertical"
                android:text="200"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/sp_16"
                android:gravity="bottom"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#00000000"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>