    <LinearLayout
        android:paddingTop="25dp"
        android:id="@+id/inform"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_80"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/inform_back"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:paddingLeft="5dp"
            android:src="@drawable/back"
            android:layout_gravity="center_vertical"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inform_message_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="通知"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/inform_like_yes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="点赞"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/inform_message_ok_line"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_yellow_bg"/>

                <TextView
                    android:id="@+id/inform_like_yes_line"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_black_bg"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:background="@color/black"
        android:id="@+id/inform_vp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/inform"></android.support.v4.view.ViewPager>


</RelativeLayout>
