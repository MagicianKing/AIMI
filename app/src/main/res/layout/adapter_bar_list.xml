<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:id="@+id/search_parent"
             android:layout_width="match_parent"
             android:layout_height="238dp"
             android:background="@color/black">

    <RelativeLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/search_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/search_bg_ceng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"/>

        <TextView
            android:id="@+id/search_line"
            android:layout_width="200dp"
            android:layout_height="0.5dp"
            android:background="@color/yellow"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/search_barname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:layout_above="@id/search_line"
            android:layout_centerHorizontal="true"
            android:textSize="22dp"/>

        <LinearLayout
            android:layout_below="@id/search_line"
            android:layout_marginTop="@dimen/x_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/search_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/jiubarenshu"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:drawablePadding="@dimen/x_10"/>

            <TextView
                android:id="@+id/search_distance"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/jiubajuli"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:drawablePadding="@dimen/x_10"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"/>
    </RelativeLayout>
</FrameLayout>