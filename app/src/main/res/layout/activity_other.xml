<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/mine_rel"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <com.yeying.aimi.views.ScrollViewPlus
            android:id="@+id/other_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#1b1b1b">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x_260">

                    <ImageView
                        android:id="@+id/other_topphoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_icon"/>

                    <RelativeLayout
                        android:id="@+id/other_head_l"
                        android:layout_width="@dimen/x_100"
                        android:layout_height="@dimen/x_100"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="70dp">

                        <com.yeying.aimi.views.RoundImageView
                            android:id="@+id/other_head"
                            android:layout_width="@dimen/x_100"
                            android:layout_height="@dimen/x_100"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_icon"
                            app:type="circle"
                            />

                        <com.yeying.aimi.views.RoundImageView
                            android:id="@+id/other_edit"
                            android:layout_width="@dimen/x_23"
                            android:layout_height="@dimen/x_23"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="@dimen/x_5"
                            android:layout_marginRight="@dimen/x_5"
                            android:src="@drawable/edit"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/other_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/other_head_l"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="18dp"
                        android:text="what this?"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="normal"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/other_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/other_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝 20"
                            android:textColor="@color/white"
                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x_5"
                            android:background="@color/white"/>

                        <TextView
                            android:id="@+id/other_attention"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x_5"
                            android:text="关注 20"
                            android:textColor="@color/white"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x_50">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x_50"
                        android:background="#010101"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/other_photo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="照片"
                            android:textColor="@color/white"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/other_foot"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="足迹"
                            android:textColor="@color/white"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x_3"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/other_line_left"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/line_yellow"/>

                        <TextView
                            android:id="@+id/other_line_right"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/line_black"/>
                    </LinearLayout>
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/other_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </FrameLayout>
            </LinearLayout>
        </com.yeying.aimi.views.ScrollViewPlus>

        <RelativeLayout
            android:id="@+id/other_topbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_65">

            <FrameLayout
                android:id="@+id/other_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="gone">
            </FrameLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/other_money"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/money"/>

            <ImageView
                android:visibility="visible"
                android:id="@+id/other_back"
                style="@style/back_style"
                android:layout_alignParentBottom="true"
                android:src="@drawable/back"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/other_set"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/set"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/other_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_50"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/other_follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=" + 关注"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/other_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="聊天"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>