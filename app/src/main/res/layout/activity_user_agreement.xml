<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/x_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_50"
        android:background="@color/black">

        <RelativeLayout
            android:id="@+id/ll_userAgreement_back"
            android:layout_width="@dimen/x_100"
            android:layout_height="@dimen/x_100"
            android:layout_centerVertical="true">

            <ImageView
                style="@style/back_style"
                android:layout_centerVertical="true"
                android:src="@drawable/back"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="AIMI用户协议"
            android:textColor="@color/white"
            android:textSize="18sp"/>


    </RelativeLayout>

    <ScrollView
        android:background="@color/black"
        android:scrollbars="none"
        android:padding="@dimen/x_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15dp"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/user_agreement"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>