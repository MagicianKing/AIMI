<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginRight="@dimen/x_10"
        android:background="@drawable/bp_money_bg2"
        android:id="@+id/bp_container"
        android:layout_width="@dimen/x_98"
        android:layout_height="@dimen/x_60"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/bp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40秒"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/bp_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限时免费"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>