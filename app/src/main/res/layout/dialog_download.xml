<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_margin="@dimen/x_16"
              android:background="@drawable/bp_money_bg2"
              android:orientation="vertical"
              android:padding="@dimen/x_16">

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x_10"
        android:text="下载进度:"
        android:textColor="@color/black"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x_8"
        android:max="100"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/x_8"
        android:gravity="right"
        android:text="正在下载..."
        android:textColor="@color/black"/>
    <!--占位符-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text="11111111111111111111111111111111111111111111111111111111111111111111"
        android:textColor="@color/white"/>

</LinearLayout>
