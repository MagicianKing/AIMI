<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/black"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/black"/>

    <include
        layout="@layout/appbar_layout"/>

    <RelativeLayout
        android:visibility="gone"
        android:paddingRight="@dimen/x_8"
        android:paddingLeft="@dimen/x_8"
        android:background="@color/set_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="微博"/>

        <TextView
            android:id="@+id/as_weibo"
            android:layout_marginLeft="@dimen/x_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/grey"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="点击绑定"
            android:drawableRight="@drawable/right_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:paddingRight="@dimen/x_8"
        android:paddingLeft="@dimen/x_8"
        android:background="@color/set_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="微信"/>

        <TextView
            android:id="@+id/as_weixin"
            android:layout_marginLeft="@dimen/x_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/grey"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="点击绑定"
            android:drawableRight="@drawable/right_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:paddingRight="@dimen/x_8"
        android:paddingLeft="@dimen/x_8"
        android:background="@color/set_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="QQ"/>

        <TextView
            android:id="@+id/as_qq"
            android:layout_marginLeft="@dimen/x_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/grey"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="点击绑定"
            android:drawableRight="@drawable/right_white"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/x_20"
        android:paddingRight="@dimen/x_8"
        android:paddingLeft="@dimen/x_8"
        android:background="@color/set_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="手机号"/>

        <TextView
            android:id="@+id/as_phone"
            android:layout_marginLeft="@dimen/x_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/grey"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="点击绑定"
            android:drawableRight="@drawable/right_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/as_psw"
        android:paddingRight="@dimen/x_8"
        android:paddingLeft="@dimen/x_8"
        android:background="@color/set_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="修改密码"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_white"/>
    </RelativeLayout>
</LinearLayout>