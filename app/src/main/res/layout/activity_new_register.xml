<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/black">

    <View

        android:layout_width="match_parent"
        android:layout_height="@dimen/x_25"/>

    <RelativeLayout
        android:id="@+id/my_top_relayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/register_back"
            android:layout_width="@dimen/x_100"
            android:layout_height="@dimen/x_100"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_centerVertical="true"
                style="@style/back_style"
                android:src="@drawable/back"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_55"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="手机号"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"/>

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:maxLength="11"
                android:textSize="@dimen/sp_15"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/x_10"
            android:background="#E9E9E9"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_55"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            >

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"

                />

            <EditText
                android:id="@+id/register_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/code"
                android:background="@null"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/sp_16"/>

            <Button
                android:id="@+id/register_ym"
                android:layout_width="@dimen/x_102"
                android:layout_height="@dimen/x_37"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_gray_disable"
                android:text="获取验证码"
                android:textColor="@color/blok"
                android:textSize="@dimen/sp_15"/>

            <TextView
                android:id="@+id/register_time"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_border"
                android:gravity="center"
                android:text=""
                android:textColor="#4D3D1B"
                android:textSize="@dimen/sp_16"
                android:visibility="gone"/>

            <Button
                android:id="@+id/register_cx"
                android:layout_width="100dp"
                android:layout_height="37dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_border"
                android:gravity="center"
                android:text="重新获取"
                android:textColor="#4D3D1B"
                android:textSize="@dimen/sp_16"
                android:visibility="gone"/>

        </RelativeLayout>

        <View
            android:layout_marginRight="@dimen/x_10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:background="#E9E9E9"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_55"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="密码"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"/>

            <EditText
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:id="@+id/register_pwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="@dimen/sp_16"/>

        </LinearLayout>

        <View
            android:layout_marginRight="@dimen/x_10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:background="#E9E9E9"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="60dp"
        android:id="@+id/my_right_more12"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:background="@drawable/grey_round_bg"
            android:id="@+id/register_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_gravity="bottom"
            android:textSize="13dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="注册代表同意"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:id="@+id/tv_register_agreement"
            android:textSize="13dp"
            android:gravity="center"
            android:textColor="@color/yellow"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="《AIMI用户协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>